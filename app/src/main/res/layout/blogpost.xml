<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lambo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_below="@id/imagePost"
        android:background="@drawable/blackgradient"
        app:layout_constraintBottom_toBottomOf="@+id/imagePost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/postProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/gradient"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bradpitt"
        android:theme="@style/images60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagePost"
        app:layout_constraintEnd_toEndOf="@+id/gradient"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradient"
        android:layout_alignParentLeft="true"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imagePost"
        app:layout_constraintStart_toStartOf="@+id/imagePost"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@+id/gradient" />
</androidx.constraintlayout.widget.ConstraintLayout>